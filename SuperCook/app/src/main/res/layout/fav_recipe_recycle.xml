<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_margin="5dp"
    android:elevation="3dp"
    card_view:cardCornerRadius="0dp"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageOfMeal"
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/titleOfMeal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@+id/imageOfMeal"
            android:layout_alignParentStart="true"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingBottom="7dp"
            android:paddingTop="5dp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.1"
            android:textColor="@color/titleColor"
            />

        <ImageView
            android:id="@+id/heartLogo"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/titleOfMeal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/favorite_heart_button"
            />

        <TextView
            android:id="@+id/timeToCook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleOfMeal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="5dp"
            android:textSize="14sp"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>